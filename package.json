{
  "name": "@gregrickaby/homepage",
  "version": "2.0.0",
  "description": "A homepage",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregrickaby/homepage.git"
  },
  "keywords": [],
  "author": "Greg Rickaby <greg@gregrickaby.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gregrickaby/homepage/issues"
  },
  "homepage": "https://gregrickaby.com",
  "scripts": {
    "format": "npx prettier '**/*.{js,md,html,css,json,yml}' --write || true",
    "lint": "npm run format && npm run lint:css && npm run lint:js",
    "lint:css": "npx stylelint '**/*.css' --fix || true",
    "lint:js": "npx eslint '**/*.js' --fix || true"
  },
  "devDependencies": {
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-recommended": "^4.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.4",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "no-descending-specificity": null
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": 0
    }
  }
}
